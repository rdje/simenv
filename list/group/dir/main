# Function: main
#
function main
{
  if (($# == 0)); then
    callsub $(get_subdir)/help
    return
  fi

  if [[ -d $(get_subdir)/$1 ]]; then
    local _sub=$1
    shift
    
    callsub $(get_subdir)/$_sub "$@"
    return
  fi

  # Collect the options and positional arguments
  opts=$(getopt -a -n "$(get_subpath)" -oh -lhelp -- "$@")
  if (($? && $? < 4)); then
    callsub $(get_subdir)/help
    return
  fi


  eval set -- $opts

  local posid
  while (($#)); do
    case $1 in
      -h|--help)
          callsub $(get_subdir)/help 
          return
          ;;

  # Insert your code here to add new options' handling

      --) shift;;

      *)  local pos[$((posid++))]=$1 
          shift
          ;;
    esac
  done


  set -- "${pos[@]}"

  local group=$1

  if [[ -d $(get_local -1)/$group ]]; then
    echo $(get_local -1)/$group
  else
    echo -e "\e[1;31m-E-\e[0m Unknown group '\e[1m$group\e[0m'"
    set_status 1
    return
  fi
}


main "$@"
